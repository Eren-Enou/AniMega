<!-- Need user.joined, user.joined, user.bio.  -->

<%- include('./partials/signup-head') %>

<body>
  <%- include('./partials/nav-bar') %>
  <h1>User Profile</h1>
  <% if (user) { %>
    <div class="user-profile">
      <h2>Welcome, <%= user.username %>!</h2>
      <p>Email: <%= user.email %></p>
      <p>Joined: <%= user.joined %></p>
      <div class="user-info">
        <img src="<%= user.image %>" alt="User Image">
        <p>Bio: <%= user.bio %></p>
      </div>
    </div>
    <div class="favorites">
      <h2>Favorited Anime</h2>
      <ul id="favorited-anime">

      </ul>
    </div>
  <% } else { %>
    <p>Please <a href="/login">login</a> or <a href="/signup">signup</a> to access your profile.</p>
  <% } %>
  <script src="/js/favoritesList.js"></script>
</body>
</html>
