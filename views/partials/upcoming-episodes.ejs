<article class="widget-container left">
    <div class="widget upcoming left">
        <div class="widget-header">
            <h2 class="index_h2_seo">
                <a href="#">
                    Upcoming Episodes
                </a>
            </h2>
        </div>
        <div class="widget-content">
            <div id="widget-upcoming-video" class="widget-slide-block">
                <div class="btn-widget-slide-side left">
                    <span class="btn-inner"></span>
                </div>
                <!-- <div class="btn-widget-slide-side right">
                    <span class="btn-inner"></span>
                </div> -->
                <div class="widget-slide-outer">
                    <ul class="widget-slide js-widget-slide">
                        <% upcoming.forEach(upcomingAnime => { %>
                            <li class="btn-anime">
                                <a href="/anime/<%= upcomingAnime.media.id %>" class="link">
                                    <h3 class="h3_character_name">
                                        <span class="title js-color-pc-constant">
                                            <%= upcomingAnime.media.title.english || upcomingAnime.media.title.romaji %> Episode <%= upcomingAnime.episode %>
                                        </span>
                                    </h3>
                                    <img src="<%= upcomingAnime.media.coverImage.large %>" alt="<%= upcomingAnime.media.title.english || upcomingAnime.media.title.romaji %>" width="160" height="220">
                                </a>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</article>

<script src="/js/widgetSeasonalVideo.js"></script>