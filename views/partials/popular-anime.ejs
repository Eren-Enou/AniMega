

<ul class="ranking-list">
    <% popularAnime.forEach((anime, index) => { %>
        <li class="ranking-unit">
            <span class="rank"><%= index + 1 %></span>
            <p class="data-image">
                <a href="/anime/<%= anime.id  %>" class="image">
                    <img class="right-column-img" src="<%= anime.coverImage.medium %>" alt="<%= anime.title.english %>">
                </a>
            </p>
            <div class="data">
                <h3 class="h3_side">
                    <a href="/anime/<%= anime.id  %>" class="title"><%= anime.title.romaji %></a>
                </h3>
                <span class="info">
                    TV, Episodes: <%= anime.episodes %>, Popularity: <%= anime.popularity %>
                </span>
            </div>
        </li>
    <% }) %>
</ul>

<link rel="stylesheet" href="/css/header-style.css">